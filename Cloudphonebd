    <script>
        /* JavaScript অংশ: কাজের লজিক */
        const homeScreen = document.getElementById('home-screen');
        const webContainer = document.getElementById('web-container');
        const iframe = document.getElementById('browser-iframe');
        const urlInput = document.getElementById('url-input');

        // URL লোড করার ফাংশন
        function openUrl(url) {
            homeScreen.style.display = 'none'; // হোম স্ক্রিন লুকান
            webContainer.style.display = 'block'; // ওয়েব ফ্রেম দেখান
            urlInput.value = url;
            iframe.src = url;
        }

        // সার্চ বাটন ফাংশন
        function handleSearch() {
            let query = urlInput.value.trim();
            if (query !== "") {
                if (query.includes('.') && !query.includes(' ')) {
                    if (!query.startsWith('http')) query = 'https://' + query;
                    openUrl(query);
                } else {
                    openUrl('https://www.google.com/search?q=' + encodeURIComponent(query));
                }
            }
        }

        // বুকমার্ক বাটন (সিম্পল অ্যালার্ট)
        function addBookmark() {
            let currentUrl = urlInput.value;
            if (currentUrl) {
                alert("বুকমার্ক সেভ করা হয়েছে: " + currentUrl);
            } else {
                alert("প্রথমে একটি ওয়েবসাইট ওপেন করুন!");
            }
        }

        // এন্টার চাপলে সার্চ হবে
        urlInput.addEventListener("keyup", function(event) {
            if (event.key === "Enter") {
                handleSearch();
            }
        });
    </script>
</body>
