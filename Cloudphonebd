    <header>Browser</header>

    <div class="toolbar">
        <input type="text" id="url-input" placeholder="সার্চ করুন বা URL লিখুন...">
        <div class="button-group">
            <button class="btn search-btn" onclick="handleSearch()">Search</button>
            <button class="btn bookmark-btn" onclick="addBookmark()">Bookmark +</button>
        </div>
    </div>

    <div id="home-screen" class="home-screen">
        <div class="link-card" onclick="openUrl('https://www.youtube.com')">
